#!/bin/bash

# set base and derivative directories
#basedir=$(dirname "$(dirname "$0")")

#libdir=$basedir/lib
libdir=$MPI_LIB
#incdir=$basedir/include
incdir=$MPI_INC

# assign CC if not defined externally
if [ -z "$CC" ]; then
	CC="cc"
fi

## require arguments, something to compile
if [ "$#" -eq 0 ]; then
	$CC
	exit
fi

$CC "$@" -I$incdir -L$libdir -lexampi -pthread

exit $?
